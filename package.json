{
  "name": "electron-screen-rec",
  "version": "1.0.0",
  "description": "Screen recording app",
  "main": "main.js",
  "scripts": {
    "start": "electron . --disable-dev-shm-usage",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.alihussaindhuniya.screenrecorder",
    "productName": "Screen Recorder by Ali Hussain Dhuniya",
    "copyright": "Â© 2025 Ali Hussain Dhuniya",
    "directories": {
      "output": "dist"
    },
    "files": [
      "node_modules/ffmpeg-static/**/*",
      "main.js",
      "preload.js",
      "dist/**/*",
      "renderer.js",
      "index.html",
      "assets/**",
      "ffmpeg/**",
      "alert.mp3",
      "style.css",
      "webcam.html"
    ],
    "extraResources": [
      {
        "from": "ffmpeg/bin/ffmpeg.exe",
        "to": "ffmpeg/bin/ffmpeg.exe"
      }
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-dialog": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "ffbinaries": "^1.1.6",
    "ffmpeg": "^0.0.4",
    "fluent-ffmpeg": "^2.1.3",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8"
  },
  "packageManager": "yarn@4.6.0",
  "volta": {
    "node": "22.13.1"
  }
}
