{
  "name": "electron-screen-rec",
  "version": "1.0.0",
  "description": "Screen recording app",
  "main": "main.js",
  "scripts": {
    "start": "electron . --disable-dev-shm-usage",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.alihussaindhuniya.screenrecorder",
    "productName": "screenrecordingByAliHussainDhuniyaDhoonwa",
    "copyright": "Â© 2025 Ali Hussain Dhuniya",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "resources/**/*",
      "dist/**/*",
      "!node_modules/.cache",
      "!scripts",
      "main.js",
      "renderer.js",
      "index.html",
      "assets/**",
      "ffmpeg/**",
      "alert.mp3",
      "style.css",
      "webcam.html"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-dialog": "2.0.0",
    "electron-reload": "2.0.0-alpha.1",
    "ffbinaries": "1.1.6",
    "ffmpeg": "0.0.4",
    "fluent-ffmpeg": "2.1.3",
    "fs": "0.0.1-security"
  },
  "devDependencies": {
    "electron": "34.0.2",
    "electron-builder": "25.1.8"
  },
  "packageManager": "yarn@4.6.0",
  "volta": {
    "node": "22.13.1"
  }
}
